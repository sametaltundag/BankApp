@model List<AccountListModel>

@{
    ViewData["Title"] = "Hesap Bilgileri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-6">
        <h5 >Kullanıcı Bilgileri</h5>
        <div class="card">
            <div class="card-body">
                <p class="card-text">Ad: @ViewBag.FullName</p>
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Kullanıcı Listesi</a>
            </div>
        </div>
    </div>

    <div class="col-6">
        <h5>Hesap Bilgileri</h5>
        @if (Model.Count>0)
        {
            foreach (var account in Model)
            {
                <div class="card mb-1">
                    <div class="card-body">
                        <h5 class="card-title">Hesap Numarası: @account.AccountNumber</h5>
                        <p class="card-text">Bakiye Bilgisi: @account.Balance</p>
                        <a asp-action="SendMoney" asp-controller="Account" asp-route-accountId="@account.Id" class="btn btn-primary">Para Gönder</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="bg-danger text-white text-center">
                <p class="lead">Kullanıcının herhangi bir hesabı bulunmamaktadır.</p>
            </div>
        }

    </div>
</div>